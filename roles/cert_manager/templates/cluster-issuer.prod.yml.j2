apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-prod
spec:
  acme:
    server: "{{ cert_manager_acme_production_url }}"
{% if cert_manager_acme_production_contact_email != ""%}
    email: "{{ cert_manager_acme_production_contact_email }}"
{% endif %}
    privateKeySecretRef:
      name: "{{ cert_manager_acme_production_private_key_ref }}"
    solvers: {{ cert_manager_acme_production_solver }}
