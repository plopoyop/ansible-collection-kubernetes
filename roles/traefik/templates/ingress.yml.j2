{# apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: traefik-dashboard
  namespace: "{{ traefik_namespace }}"
spec:
  ingressClassName: traefik
  rules:
  - host: "traefik-dashboard.{{ dns.traefik }}"
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: ingress-traefik
            port:
              name: traefik #}

---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: traefik-dashboard
  namespace: "{{ traefik_namespace }}"
spec:
  entryPoints:
    - web
  routes:
    - match: Host(`traefik-dashboard.{{ dns.traefik }}`) && (PathPrefix(`/dashboard`) || PathPrefix(`/api`))
      kind: Rule
      services:
        - name: api@internal
          kind: TraefikService
