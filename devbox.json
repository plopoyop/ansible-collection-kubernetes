{
    "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
    "packages": [
      "path:.#ansible",
      "path:.#ansible-doctor",
      "path:.#ansible-lint",
      "path:.#kubernetes",
      "path:.#molecule",
      "path:.#molecule-plugins",
      "path:.#urllib3",
      "git@2.52.0",
      "glibcLocales@2.40-66",
      "go-task@3.45.5",
      "jq@1.8.1",
      "kind@0.31.0",
      "kubectl@1.34.3",
      "kubernetes-helm@3.19.1",
      "pre-commit@4.5.1",
      "python313Packages.boto3@1.40.18",
      "python313Packages.moto@5.1.11",
      "python313Packages.pytest-ansible@25.12.0",
      "python313Packages.ruff@0.14.14",
      "yamllint@1.37.1"
    ],
    "env": {
      "DEVBOX_NO_PROMPT": "1",
      "DEVBOX_VIRTUAL_ENV": "${DEVBOX_PROJECT_ROOT}/.devbox/virtenv"
    },
    "shell": {
      "init_hook": [
        "export ANSIBLE_GALAXY_ROLES_PATH=${DEVBOX_VIRTUAL_ENV}/ansible/roles;",
        "export ANSIBLE_GALAXY_COLLECTIONS_PATH=${DEVBOX_VIRTUAL_ENV}/ansible/collections;",
        "export ANSIBLE_COLLECTION_ROLES_PATH=${DEVBOX_PROJECT_ROOT}/roles;",
        "export ANSIBLE_ROLES_PATH=${ANSIBLE_GALAXY_ROLES_PATH}:${ANSIBLE_COLLECTION_ROLES_PATH};",
        "export ANSIBLE_COLLECTIONS_PATH=${ANSIBLE_GALAXY_COLLECTIONS_PATH};",
        "task prepare"
      ]
    }
  }
